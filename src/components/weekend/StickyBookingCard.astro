---
import type { Journey } from "../../data/content";

interface Props {
  weekend: Journey;
  groupSize?: string;
  ctaHref: string;
}

const { weekend, groupSize, ctaHref } = Astro.props;
---

<aside class="hidden lg:block">
  <div class="sticky top-8">
    <div class="border-l border-base-200 pl-5">
      <p class="text-xs uppercase tracking-[0.2em] text-base-500">
        Boek dit weekend
      </p>
      <div class="mt-4 space-y-2 text-sm text-base-700">
        <p>
          <span class="font-semibold text-base-900">{weekend.dates}</span>
        </p>
        <p>
          <span class="font-semibold text-base-900">{weekend.location}</span>
        </p>
        <p>
          <span class="font-semibold text-base-900">{weekend.price}</span>
        </p>
        <p>
          <span class="font-semibold text-base-900">
            {groupSize ?? "Kleine groep"}
          </span>
        </p>
      </div>
      <a
        href={ctaHref}
        class="cta-primary mt-5 inline-flex items-center justify-center rounded-full border border-base-300 px-4 py-2 text-sm font-semibold text-base-900"
      >
        Boek dit weekend
      </a>
    </div>
  </div>
</aside>

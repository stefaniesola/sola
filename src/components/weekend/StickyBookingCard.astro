---
import type { Journey } from "../../data/content";

interface Props {
  weekend: Journey;
  groupSize?: string;
  earlyBirdLine?: string;
  ctaHref: string;
}

const { weekend, groupSize, earlyBirdLine, ctaHref } = Astro.props;
---

<aside class="hidden lg:block">
  <div class="sticky top-8">
    <div class="rounded-3xl border border-base-200 bg-white p-6 shadow-lg">
      <h2 class="text-lg font-semibold text-base-900">Boek je plek</h2>
      <div class="mt-4 space-y-3 text-sm text-base-700">
        <div class="flex items-center justify-between">
          <span>Datum</span>
          <span class="font-semibold text-base-900">{weekend.dates}</span>
        </div>
        <div class="flex items-center justify-between">
          <span>Locatie</span>
          <span class="font-semibold text-base-900">{weekend.location}</span>
        </div>
        <div class="flex items-center justify-between">
          <span>Prijs</span>
          <span class="font-semibold text-base-900">{weekend.price}</span>
        </div>
        <div class="flex items-center justify-between">
          <span>Groep</span>
          <span class="font-semibold text-base-900">{groupSize ?? "Kleine groep"}</span>
        </div>
      </div>
      {earlyBirdLine && (
        <div class="mt-5 rounded-2xl border border-accent-200 bg-accent-50 px-4 py-3 text-xs font-semibold uppercase tracking-[0.2em] text-accent-700">
          {earlyBirdLine}
        </div>
      )}
      <a
        href={ctaHref}
        class="cta-primary mt-6 inline-flex w-full items-center justify-center rounded-full bg-base-900 px-6 py-3 text-base font-semibold text-white"
      >
        Boek je plek
      </a>
    </div>
  </div>
</aside>

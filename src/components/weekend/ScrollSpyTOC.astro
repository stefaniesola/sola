---
interface TocItem {
  id: string;
  label: string;
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

<aside class="hidden lg:block">
  <div class="sticky top-8 rounded-3xl border border-base-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-base-900">Inhoudsopgave</h2>
    <nav class="mt-4 space-y-2 text-sm" data-scrollspy-nav>
      {items.map((item) => (
        <a
          href={`#${item.id}`}
          class="scrollspy-link block rounded-full px-3 py-2 text-base-600 transition-colors"
          data-scrollspy-link
          data-scrollspy-id={item.id}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</aside>

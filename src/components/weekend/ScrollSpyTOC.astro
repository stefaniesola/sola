---
interface TocItem {
  id: string;
  label: string;
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

<aside class="hidden lg:block">
  <div class="sticky top-8">
    <h2 class="text-sm uppercase tracking-[0.2em] text-base-500">
      Inhoudsopgave
    </h2>
    <nav class="mt-4 space-y-2 text-sm" data-scrollspy-nav>
      {items.map((item) => (
        <a
          href={`#${item.id}`}
          class="scrollspy-link block text-base-600 transition-colors"
          data-scrollspy-link
          data-scrollspy-id={item.id}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</aside>

---
import type { Journey } from "../../data/content";

interface Props {
  weekend: Journey;
  subtitle: string;
  primaryCtaHref: string;
  secondaryCtaHref: string;
}

const {
  weekend,
  subtitle,
  primaryCtaHref,
  secondaryCtaHref,
} = Astro.props;
---

<section class="bg-base-25">
  <div class="max-w-6xl mx-auto px-6 pt-14 lg:pt-20">
    <div class="relative overflow-hidden rounded-3xl">
      <img
        src={weekend.heroImage}
        alt={weekend.name}
        class="h-64 w-full object-cover md:h-80 lg:h-96"
        loading="eager"
      />
      <div class="absolute bottom-4 left-4 right-4 flex flex-wrap gap-2 text-xs uppercase tracking-[0.18em] text-white drop-shadow">
        <span>{weekend.type}</span>
        <span aria-hidden="true">•</span>
        <span>{weekend.location}</span>
        <span aria-hidden="true">•</span>
        <span>{weekend.dates}</span>
        <span aria-hidden="true">•</span>
        <span>{weekend.price}</span>
      </div>
    </div>
    <div class="mt-8 space-y-4">
      <h1 class="text-4xl lg:text-5xl font-semibold text-base-900">
        {weekend.name}
      </h1>
      <p class="text-lg text-base-700 max-w-3xl">{subtitle}</p>
      <div class="flex flex-wrap gap-3">
        <a
          href={primaryCtaHref}
          class="cta-primary inline-flex items-center justify-center rounded-full border border-base-300 px-5 py-2 text-sm font-semibold text-base-900"
        >
          Boek dit weekend
        </a>
        <a
          href={secondaryCtaHref}
          class="cta-secondary inline-flex items-center justify-center rounded-full border border-base-300 px-5 py-2 text-sm font-semibold text-base-900"
        >
          Contacteer ons voor meer info
        </a>
      </div>
    </div>
  </div>
</section>

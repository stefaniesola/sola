<header class="border-b border-black/5 sticky top-0 z-50 bg-white/80 backdrop-blur-xl">
  <div class="w-full mx-auto px-6 max-w-6xl lg:px-10">
    <div x-data="{ open: false }" class="flex items-center justify-between py-4">
      <a href="/" class="text-black inline-flex items-center gap-2 font-semibold tracking-tight">
        <span class="h-9 w-9 rounded-full bg-black text-white inline-flex items-center justify-center text-sm">S</span>
        <span>SOLATRAVEL</span>
      </a>
      <button
        @click="open = !open"
        :aria-expanded="open.toString()"
        aria-controls="main-navigation"
        aria-label="Schakel navigatie"
        class="inline-flex items-center justify-center p-2 text-base-700 hover:text-black focus:outline-none focus:text-black lg:hidden">
        <svg :class="{'rotate-90': open}" class="w-6 h-6 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path x-show="!open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          <path x-show="open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <nav
        id="main-navigation"
        :class="{'max-h-80 pt-4': open, 'max-h-0': !open}"
        class="flex-col w-full lg:w-auto lg:flex lg:flex-row lg:items-center lg:gap-8 overflow-hidden transition-all duration-300 max-h-0 lg:max-h-none">
        <div class="flex flex-col gap-3 lg:flex-row lg:items-center lg:gap-6 text-sm font-medium">
          <a class="hover:text-accent-700" href="/">Home</a>
          <a class="hover:text-accent-700" href="/weekenden">Weekenden</a>
          <a class="hover:text-accent-700" href="/reizen">Reizen</a>
          <a class="hover:text-accent-700" href="/over-ons">Over ons</a>
          <a class="hover:text-accent-700" href="/contact">Contact</a>
        </div>
        <div class="mt-4 lg:mt-0 lg:ml-4 flex items-center">
          <a
            href="/contact#plan-gesprek"
            class="inline-flex items-center justify-center rounded-full bg-black text-white px-4 py-2 text-xs font-semibold tracking-wide hover:bg-accent-800 transition"
          >
            Plan een gesprek
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

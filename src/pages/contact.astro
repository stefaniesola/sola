---
import BaseLayout from "../layouts/BaseLayout.astro";
import { contactPage } from "../data/content";
---

<BaseLayout
  title="SOLA | Contact"
  description="Neem contact op met SOLA voor boekingen, vragen of een gesprek."
>
  <section class="bg-base-50/80 border-b border-base-200">
    <div class="max-w-4xl mx-auto px-6 py-16 space-y-4">
      <p class="uppercase text-xs tracking-[0.25em] text-base-500">
        {contactPage.label}
      </p>
      <h1 class="text-4xl font-semibold text-base-900">
        {contactPage.title}
      </h1>
      <p class="text-base-700">
        {contactPage.description}
      </p>
    </div>
  </section>

  <section
    class="max-w-6xl mx-auto px-6 py-14 grid lg:grid-cols-[2fr,1fr] gap-10"
  >
    <div class="p-6 rounded-2xl border border-base-200 bg-white shadow-sm">
      <div class="notion-embed-wrapper">
        <iframe
          id="notion-form"
          src="https://real-earthquake-581.notion.site/ebd/2d6045ef7d2a81d39c15f26641cf0e4d"
          width="100%"
          frameborder="0"
          allowfullscreen
          style="min-height: 1200px; border: none;"></iframe>
      </div>
    </div>
  </section>
</BaseLayout>

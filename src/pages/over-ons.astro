---
import BaseLayout from "../layouts/BaseLayout.astro";
import {
  people,
  missionVision,
  kernidentiteit,
  homeCopy,
  aboutPage,
} from "../data/content";

const coreTeam = people.filter((person) => person.type === "Core");
const experts = people.filter((person) => person.type === "Expert");
---

<BaseLayout
  title="SOLATRAVEL | Over ons"
  description="Wie we zijn, waar we voor staan en met wie we werken."
>
  <section class="bg-base-50/80 border-b border-base-200">
    <div class="max-w-6xl mx-auto px-6 py-16 space-y-6">
      <p class="uppercase text-xs tracking-[0.25em] text-base-500">
        {aboutPage.label}
      </p>
      <h1 class="text-4xl font-semibold text-base-900">{aboutPage.title}</h1>
      <p class="text-base-700 max-w-3xl">
        {aboutPage.description}
      </p>
      <p class="text-base-700 max-w-2xl italic">{aboutPage.quote}</p>
    </div>
  </section>

  <section class="max-w-6xl mx-auto px-6 py-14 space-y-10">
    <div class="grid lg:grid-cols-2 gap-8">
      <div class="space-y-3">
        <h2 class="text-2xl font-semibold text-base-900">
          {aboutPage.sectionVoorWie}
        </h2>
        <ul class="space-y-2 text-base-700">
          {
            homeCopy.voorWie.map((item) => (
              <li class="flex gap-2">
                <span class="mt-1 h-2 w-2 rounded-full bg-accent-600" />
                <span>{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="space-y-3">
        <h2 class="text-2xl font-semibold text-base-900">
          {aboutPage.sectionMissieVisie}
        </h2>
        <div
          class="p-5 rounded-2xl border border-base-200 bg-base-50 space-y-3"
        >
          <div>
            <p class="font-semibold text-base-900">{aboutPage.missieLabel}</p>
            <p class="text-base-700">{missionVision.mission}</p>
          </div>
          <div>
            <p class="font-semibold text-base-900">{aboutPage.visieLabel}</p>
            <p class="text-base-700">{missionVision.vision}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-base-900">
        {aboutPage.sectionWatOnsAndersMaakt}
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {
          homeCopy.pillars.map((pillar) => (
            <div class="p-4 rounded-2xl border border-base-200 bg-white shadow-sm">
              <p class="font-medium text-base-900">{pillar.title}</p>
            </div>
          ))
        }
      </div>
    </div>

    <div class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-semibold text-base-900">
          {aboutPage.sectionTeam}
        </h2>
      </div>
      <div class="grid lg:grid-cols-2 gap-4">
        {
          coreTeam.map((person) => (
            <article class="p-6 rounded-2xl border border-base-200 bg-base-50">
              <p class="text-xl font-semibold text-base-900">{person.name}</p>
              <p class="text-base-600">{person.role}</p>
              <p class="text-base-700 mt-3 leading-relaxed">{person.bio}</p>
            </article>
          ))
        }
      </div>
    </div>

    <div class="space-y-6">
      <h2 class="text-2xl font-semibold text-base-900">
        {aboutPage.sectionExperten}
      </h2>
      <div class="grid lg:grid-cols-2 gap-4">
        {
          experts.map((person) => (
            <article class="p-6 rounded-2xl border border-base-200 bg-white shadow-sm">
              <p class="text-xl font-semibold text-base-900">{person.name}</p>
              <p class="text-base-600">{person.role}</p>
              <p class="text-base-700 mt-3 leading-relaxed">{person.bio}</p>
            </article>
          ))
        }
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-base-900">
        {aboutPage.sectionKernidentiteit}
      </h2>
      <div
        class="p-6 rounded-2xl border border-base-200 bg-base-50 space-y-2 text-base-700"
      >
        {kernidentiteit.map((line) => <p>{line}</p>)}
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-base-900">
        {aboutPage.sectionTerra.title}
      </h2>
      <div
        class="p-6 rounded-2xl border border-base-200 bg-white shadow-sm space-y-2 text-base-700"
      >
        <p>{aboutPage.sectionTerra.description1}</p>
        <p>{aboutPage.sectionTerra.description2}</p>
        <p class="italic">{aboutPage.sectionTerra.quote}</p>
        <a
          class="inline-flex items-center text-accent-700 font-semibold"
          href="/reizen/solatravel-terra-frankrijk"
          >{aboutPage.sectionTerra.cta}</a
        >
      </div>
    </div>

    <div class="text-center pt-6">
      <a
        class="px-5 py-3 rounded-full bg-black text-white font-semibold hover:bg-accent-800"
        href="/weekenden">{aboutPage.ctaDiscover}</a
      >
    </div>
  </section>
</BaseLayout>

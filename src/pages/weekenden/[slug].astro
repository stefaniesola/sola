                  class="section-anchor rounded-3xl border border-base-200 bg-white p-6 shadow-sm"
                >
                  <h2 class="text-xl font-semibold text-base-900">Voor wie</h2>
                  <div
                    class="prose prose-base-900 mt-4 max-w-none text-base-700"
                    set:html={marked.parse(voorWie) as string}
                  />
                </article>

    weekend={weekend}
    subtitle={heroSubtitle}
    groupSize={groupSize}
    earlyBirdLine={earlyBirdLine}
    primaryCtaHref="#boek-je-plek"
    secondaryCtaHref="/contact"
  />

  <section class="bg-base-25">
    <div class="max-w-6xl mx-auto px-6 py-12 lg:py-16 pb-24">
      <div class="grid gap-10 lg:grid-cols-[220px_minmax(0,1fr)_280px]">
        <ScrollSpyTOC items={tocItems} />

        <div class="space-y-16">
          {introParagraph && (
            <div class="space-y-4" data-reveal>
              <p class="text-lg leading-relaxed text-base-700">

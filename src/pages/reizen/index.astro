---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { journeys } from "../../data/content";
import { getImage } from "astro:assets";
import terraImage from "../../assets/images/1513986998.jpg";

const trips = journeys.filter((journey) => journey.type === "Reis");

// Process hero images for trips
const tripsWithImages = await Promise.all(
  trips.map(async (trip) => {
    let imageUrl = trip.heroImage;
    // If it's a local image path, process it
    if (trip.heroImage?.startsWith("/src/assets/images/")) {
      if (trip.slug === "sola-terra-frankrijk") {
        const optimized = await getImage({
          src: terraImage,
          width: 1400,
          quality: 85,
        });
        imageUrl = optimized.src;
      }
    }
    return { ...trip, heroImage: imageUrl };
  })
);
---

<BaseLayout
  title="SOLA | Reizen"
  description="Reizen waar natuur, beweging en inzicht samenkomen."
>
  <section class="bg-base-50/80 border-b border-base-200">
    <div class="max-w-6xl mx-auto px-6 py-16 space-y-6 text-center">
      <p class="uppercase text-xs tracking-[0.25em] text-base-500">Reizen</p>
      <h1 class="text-4xl font-semibold text-base-900">COMING SOON</h1>
      <p class="text-base-700 max-w-3xl mx-auto">
        Vanaf april 2027: momenteel in voorbereiding.
      </p>
      <div class="flex flex-wrap justify-center gap-3 pt-4">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-5 py-3 rounded-full bg-base-25 text-base-900 font-semibold hover:bg-base-25/90 transition border border-base-300"
        >
          Plan een gesprek
        </a>
        <a
          href="/newsletter"
          class="inline-flex items-center justify-center px-5 py-3 rounded-full border border-base-300 text-base-800 font-semibold hover:border-base-500"
        >
          Blijf op de hoogte
        </a>
      </div>
    </div>
  </section>

  <section class="max-w-6xl mx-auto px-6 py-14">
    {
      tripsWithImages.map((trip) => (
        <article class="relative rounded-2xl border border-base-200 overflow-hidden bg-base-25 shadow-sm flex flex-col max-w-md mx-auto">
          <div class="absolute top-4 right-4 z-10 bg-base-900 text-white px-4 py-1.5 text-xs font-semibold uppercase tracking-wide shadow-lg rounded">
            Coming Soon
          </div>
          <div
            class="aspect-[4/3] bg-base-200"
            style={{
              backgroundImage: `url(${trip.heroImage})`,
              backgroundSize: "cover",
              backgroundPosition: "center",
            }}
          />
          <div class="p-4 space-y-2 flex-1 flex flex-col">
            <h2 class="text-lg font-semibold text-base-900">{trip.name}</h2>
            <p class="text-sm text-base-700">
              Midweek- en 8-daagse reizen in Frankrijk. Kleine groep. Verdiepend
              en onderbouwd. Veel buiten, goed eten, meer tijd.
            </p>
          </div>
        </article>
      ))
    }
  </section>
</BaseLayout>
